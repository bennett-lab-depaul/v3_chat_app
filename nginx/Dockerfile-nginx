FROM nginx:1.27-alpine

# Remove the default site just to make sure it doesnâ€™t interfere
RUN rm /etc/nginx/conf.d/default.conf

# Copy the sandbox file (should this filename be pulled form an .env variable?)
COPY default.conf.sandbox /etc/nginx/conf.d/default.conf

# Wait for the Certbot certification to finish
COPY wait-for-certs.sh /wait-for-certs.sh
RUN chmod +x /wait-for-certs.sh
ENTRYPOINT ["/wait-for-certs.sh"]
