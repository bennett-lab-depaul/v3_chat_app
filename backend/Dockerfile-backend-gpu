# GPU Enabled
FROM nvidia/cuda:12.3.2-devel-ubuntu22.04

# --------------------------------------------------------------------
# Set environment variables
# --------------------------------------------------------------------
ENV APP_ENVIRONMENT="deployment" \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    JAVA_HOME="/usr/lib/jvm/java-17-openjdk-amd64" \
    PATH="$JAVA_HOME/bin:$PATH"

# Set the timezone to UTC
RUN ln -sf /usr/share/zoneinfo/UTC /etc/localtime && echo "UTC" > /etc/timezone

# --------------------------------------------------------------------
# Install system packages & Python
# --------------------------------------------------------------------
RUN apt-get update && apt-get install -y --fix-missing \
    build-essential \
    cmake \
    git \
    python3 \
    python3-pip \
    g++ \
    libblas-dev \
    liblapack-dev \
    libffi-dev \
    libpython3-dev \
    pkg-config \
    postgresql-client \
    portaudio19-dev \
    python3-pyaudio \
    libasound2-dev \
    openjdk-17-jre-headless \
    && ln -s /usr/bin/python3 /usr/bin/python

# --------------------------------------------------------------------
# Install Python dependencies
# --------------------------------------------------------------------
# Set the working directory & copy requirements
WORKDIR /app
COPY requirements-web.txt .

# Upgrade pip and tools
RUN pip3 install --upgrade pip setuptools wheel

# First try to install everything from the wheel cache
RUN pip3 install --no-index --find-links=/wheels -r requirements-web.txt || true

# Then build any wheels that were missing and install again
RUN pip3 wheel --wheel-dir=/wheels --no-cache-dir --use-pep517 --prefer-binary --timeout=120 --retries=10 \
    -r requirements-web.txt

# Install packages again, using the newly added wheels
RUN pip3 install --no-index --find-links=/wheels -r requirements-web.txt

# --------------------------------------------------------------------
# Handle llama-cpp-python separately and cache its wheel
# --------------------------------------------------------------------
ENV CMAKE_ARGS="-DLLAMA_CUDA=on -DLLAMA_BUILD_LLAVA=off"

# Try install from local wheel first
RUN pip3 install --no-index --find-links=/wheels llama-cpp-python || true

# If not found, build and cache the wheel
RUN pip3 wheel --wheel-dir=/wheels llama-cpp-python \
    --extra-index-url https://abetlen.github.io/llama-cpp-python/whl/cu123 \
    --timeout=120 --retries=10 || true

# Install again now that it's cached
RUN pip3 install --no-index --find-links=/wheels llama-cpp-python

# --------------------------------------------------------------------
# Copy project files
# --------------------------------------------------------------------
COPY . .
